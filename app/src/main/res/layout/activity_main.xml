<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome_todo"
        android:text = "@string/welcome"
        android:layout_centerInParent="true"
        android:fontFamily="@font/vogue"
        android:textColor="@color/white"
        android:textSize="@dimen/size_of_todolist"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

    </TextView>

    <Button
        android:id="@+id/button_start"
        android:onClick="onClickStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/welcome_todo"
        android:layout_centerInParent="true"
        android:text="@string/start"
        android:textSize="17sp"
        android:fontFamily="@font/vogue"
        android:minWidth="@dimen/min_weight_button"
        android:minHeight="@dimen/min_height_button"
        android:clickable="true"
        android:background="@color/purple_my"
        android:textColor="@color/white"
        >

    </Button>



</RelativeLayout>